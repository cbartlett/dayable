
<div class=" hero-unit reverse-well">
<h2> Sign In </h2>
<p class="lead">Back for more eh?</p>
<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :defaults => { :label => false }, :html => {:class => 'form-vertical' }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.input :login, :placeholder => 'Username or Email' %>
  <%= f.input :password, :placeholder => 'Password' %>
  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>
  <%= f.submit "Sign in", :class => 'btn btn-info' %>
<% end %>

<%= render :partial => "devise/shared/links" %>
</div>