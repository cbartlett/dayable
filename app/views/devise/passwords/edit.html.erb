<div class="row">
  <div class="span12">
  <div class="well">
    <h2>Change your password</h2>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :defaults => { :label => false }, :html => { :class => 'form-vertical', :method => :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>
  <%= f.password_field :password, :placeholder => 'New password' %><br/>
  <%= f.password_field :password_confirmation, :placeholder => 'Confirm new password' %></br>
  <%= f.submit "Change my password", :class => 'btn btn-info' %>
<% end %>

<%= render "links" %>
</div>
</div>
</div>